<h1><%= @task.name %></h1>
  <h2>Description : <%= @task.description %></h2>
  <h2>Done? <%= @task.done %></h2>
  <h2>Priority: <%= @task.priority %></h2>
<p><%= link_to "Edit", edit_task_path(@task)%> <%= link_to "Back", tasks_path%></p>
<p><%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></p>
